# .env.example - Copy to .env and fill in your values for local development
# DO NOT COMMIT .env FILE

# Database Connection URL (adjust for your PostgreSQL setup)
# Format: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://your_db_user:your_db_password@localhost:5432/your_db_name"

# Flask Secret Key (generate a random string - e.g., python -c 'import os; print(os.urandom(24).hex())')
SECRET_KEY="your_very_secret_random_key_here"

# Google Cloud Project OAuth 2.0 Client ID (obtained from Google Cloud Console)
# Needed to verify the ID token from the frontend
GOOGLE_CLIENT_ID="your_google_client_id.apps.googleusercontent.com"

# Optional: Set FLASK_ENV for development mode
# FLASK_ENV=development
